@model SignInUser
@{
    ViewData["Title"] = "Recuperação de conta";
    Layout = "~/Views/Shared/_Layout_3.cshtml";
}
<div class="container-fluid text-center">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="card col-12 col-md-6 col-lg-4">
            <div class="card-body">
                <form method="post">
                    <a class="logo" asp-area="" asp-controller="Usuarios" asp-action="Index">
                        <img class="d-block mx-auto mb-4" src="~/img/Logoprimary.png" alt="" width="150">
                    </a>
                    <h4 class="mb-3 text-muted">Digite o e-mail para recuperação.</h4>
                    @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml"); }
                    <div class="row mt-5">
                        <div class="col-12">
                            <div class="form-row">
                                <div class="col">
                                    <div class="md-form text-left">
                                        <i class="fa fa-user prefix grey-text"></i>
                                        <input asp-for="Username" id="Username" class="form-control" type="email">
                                        <label for="Username" class="font-weight-light">Seu email</label>
                                        <span asp-validation-for="Username" class="ml-5 d-flex text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-5">
                        <div class="col-md-6 mt-4 mt-md-0 col-12 order-1 order-md-0 ml-auto align-self-center">
                            <a asp-action="signin" asp-controller="auth" class="font-weight-bold">Anterior</a>
                        </div>
                        <div class="col-md-6 col-12 ml-auto">
                            <button type="submit" class="btn btn-lg btn-primary btn-block text-capitalize"> Próximo </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
