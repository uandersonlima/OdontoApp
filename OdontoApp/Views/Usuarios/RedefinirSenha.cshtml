@model UserResetPassword
@{
    ViewData["Title"] = "Alterar senha";
    Layout = "~/Views/Shared/_Layout_3.cshtml";
}
<div class="container-fluid">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="card col-12 col-md-6 col-lg-4">
            <div class="card-body p-5">
                <form method="post">
                    <a class="logo" asp-area="" asp-controller="Usuarios" asp-action="Index">
                        <img class="d-block mx-auto mb-4" src="~/img/Logoprimary.png" alt="" width="150">
                    </a>
                    <h4 class="card-title mb-4 mt-1 text-center">Redefinir senha</h4>
                    @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml"); }
                    <div class="md-form">
                        <input id="Password" asp-for="Password" class="form-control" type="password">
                        <label for="Password">Nova Senha</label>
                        <span asp-validation-for="Password" class="d-flex text-danger"></span>
                    </div>
                    <div class="md-form">
                        <input id="PasswordConfirmation" asp-for="PasswordConfirmation" class="form-control" type="password">
                        <label for="PasswordConfirmation">Confirmação de nova senha</label>
                        <span asp-validation-for="PasswordConfirmation" class="d-flex text-danger"></span>
                    </div>
                    <div class="form-row mt-5">
                        <div class="col-md-6 col-12 mr-auto ml-auto">
                            <button type="submit" class="btn btn-lg btn-primary btn-block text-capitalize"> Confirmar </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
