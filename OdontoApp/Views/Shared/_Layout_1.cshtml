@inject ILoginService loginSvc
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/img/logo1.png" type="image/x-icon" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <meta charset="utf-8" />


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
    <!-- Fonts and icons -->
    <script src="~/assets/js/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Lato:300,400,700,900"] },
            custom: { "families": ["Flaticon", "Font Awesome 5 Solid", "Font Awesome 5 Regular", "Font Awesome 5 Brands", "simple-line-icons"], urls: ['../../assets/css/fonts.min.css'] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/atlantis.css">
    <link rel="stylesheet" href="~/assets/css/all.min.css" />
</head>
<body>
    <div class="wrapper sidebar_minimize">
        <div class="main-header">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="white">
                <button class="topbar-toggler more"><i class="icon-options-vertical text-primary"></i></button>
                <div class="nav-toggle">
                    <button class="btn btn-toggle toggle-sidebar">
                        <i class="icon-menu text-primary"></i>
                    </button>
                </div>
                <a class="logo" asp-area="" asp-controller="Agendas" asp-action="Index">
                    <img src="~/img/Logoprimaryline.png" width="120" alt="navbar brand" class="navbar-brand">
                </a>
                <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse" data-target="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="icon-menu text-primary"></i>
                    </span>
                </button>
            </div>
            <!-- End Logo Header -->
            <!-- Navbar Header -->
            <nav class="navbar navbar-header navbar-expand-lg" data-background-color="white">
                <div class="container-fluid col-11">
                    <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
                        <li class="nav-item dropdown hidden-caret mr-5">
                            <a class="nav-link dropdown-toggle" href="#" id="notifications" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-bell text-primary" style="font-size:24px"></i>
                                <span class="notification font-weight-bold">4</span>
                            </a>
                            <ul class="dropdown-menu messages-notif-box animated fadeIn" aria-labelledby="notifications">
                                <li>
                                    <div class="dropdown-title d-flex justify-content-between align-items-center">
                                        Notificações
                                        <a href="#" class="small">Marcar todas como lidas</a>
                                    </div>
                                </li>
                                <li>
                                    <div class="message-notif-scroll scrollbar-outer">
                                        <div class="notif-center">
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="../assets/img/jm_denis.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Jimmy Denis</span>
                                                    <span class="block">
                                                        Eu vou a consultar amanhã
                                                    </span>
                                                    <span class="time">5 minutos atrás</span>
                                                </div>
                                            </a>
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="../assets/img/chadengle.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Chad</span>
                                                    <span class="block">
                                                        Nos vemos a tarde!
                                                    </span>
                                                    <span class="time">12 minutos atrás</span>
                                                </div>
                                            </a>
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="../assets/img/mlane.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Jhon Doe</span>
                                                    <span class="block">
                                                        Vou precisar cancelar...
                                                    </span>
                                                    <span class="time">12 minutos atrás</span>
                                                </div>
                                            </a>
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="../assets/img/talha.jpg" alt="Img Profile">
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Talha</span>
                                                    <span class="block">
                                                        Ok, confirmo.
                                                    </span>
                                                    <span class="time">17 minutos atrás</span>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a class="see-all" href="javascript:void(0);">See all messages<i class="fa fa-angle-right"></i> </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown hidden-caret">
                            <a class="dropdown-toggle profile-pic text-primary font-weight-bold h3" data-toggle="dropdown" href="#" aria-expanded="false">
                                @Mascara.PrimeiroNome(loginSvc.GetUser().Nome).ToUpper() <i class="ml-2 fa fa-user-alt" style="font-size:24px"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user animated fadeIn">
                                <div class="dropdown-user-scroll scrollbar-outer">
                                    <li>
                                        <div class="user-box">
                                            <div class="u-text">
                                                <h4>@loginSvc.GetUser().Nome</h4>
                                                <p class="text-muted">@loginSvc.GetUser().Email</p><a asp-controller="MinhaContas" asp-action="Index" class="btn btn-xs btn-primary btn-sm">Meu perfil</a>
                                                <a class="text-muted card-link text-danger" asp-controller="Clientes" asp-action="Logout">Sair</a>
                                            </div>
                                        </div>
                                    </li>
                                </div>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- End Navbar -->
        </div>
        <!-- Sidebar -->
        <div class="sidebar sidebar-style-2" data-background-color="blue">
            <div class="scroll-wrapper sidebar-wrapper scrollbar scrollbar-inner">
                <div class="sidebar-content py-5">
                    <ul class="nav">
                        <li class="nav-item py-2">
                            <a asp-area="" asp-controller="Agendas" asp-action="Index">
                                <i class="fa fa-calendar-day"></i>
                                <p class="font-weight-bold">Agenda</p>
                            </a>
                        </li>
                        <li class="nav-item py-2">
                            <a asp-area="" asp-controller="Pacientes" asp-action="Index">
                                <i class="fas fa-user"></i>
                                <p class="font-weight-bold">Pacientes</p>
                            </a>
                        </li>

                        <li class="nav-item py-2">
                            <a asp-area="" asp-controller="Estoques" asp-action="Index">
                                <i class="fa fa-clipboard-list"></i>
                                <p class="font-weight-bold">Estoques</p>
                            </a>
                        </li>
                        <li class="nav-item py-2">
                            <a asp-area="" asp-controller="Anamneses" asp-action="Index">
                                <i class="fa fa-notes-medical"></i>
                                <p class="font-weight-bold">Anamnese</p>
                            </a>
                        </li>
                        <li class="nav-item py-2">
                            <a asp-area="" asp-controller="Medicos" asp-action="Index">
                                <i class="fa fa-user-nurse"></i>
                                <p class="font-weight-bold">Medicos</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- End Sidebar -->
        <!--Corpo da página-->
        <div class="main-panel">
            <div class="content">
                @RenderBody()
            </div>
            <footer class="footer text-primary">
                <!-- Footer Text -->
                <div class="container-fluid text-center text-md-right">
                    <div class="col-md-12">
                        <div class="mb-12 flex-center h5">
                            <a class="font-weight-bold mr-md-5 mr-3" asp-area="" asp-controller="Dev4s" asp-action="Privacy">
                                Termos e Privacidade
                            </a>
                            <!-- Twitter -->
                            <a class=" font-weight-bold mr-md-5 mr-3">
                                Copyright  &copy;2019 - @DateTime.Now.Year DEV4
                            </a>
                        </div>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Footer Text -->
            </footer>
        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="~/assets/js/core/jquery.3.2.1.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>

    <!-- jQuery UI -->
    <script src="~/assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script src="~/assets/js/plugin/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js"></script>

    <!-- jQuery Scrollbar -->
    <script src="~/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>


    <!-- Chart JS -->
    <script src="~/assets/js/plugin/chart.js/chart.min.js"></script>

    <!-- jQuery Sparkline -->
    <script src="~/assets/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>

    <!-- Chart Circle -->
    <script src="~/assets/js/plugin/chart-circle/circles.min.js"></script>

    <!-- Datatables -->
    <script src="~/assets/js/plugin/datatables/datatables.min.js"></script>

    <!-- Bootstrap Notify -->
    <script src="~/assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- jQuery Vector Maps -->
    <script src="~/assets/js/plugin/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/assets/js/plugin/jqvmap/maps/jquery.vmap.world.js"></script>

    <!-- Sweet Alert -->
    <script src="~/assets/js/plugin/sweetalert/sweetalert.min.js"></script>

    <!-- Atlantis JS -->
    <script src="~/assets/js/atlantis.js"></script>

    <!-- Agenda e Mascara Cep JS -->
    <script src='~/Agenda/js/jquery.mask.js'></script>

    <!--<script src='//code.jquery.com/ui/1.11.4/jquery-ui.js'></script>-->
    <script>$('.cep').mask('00.000-000')</script>
    <script>
        $(document).ready(function () {
            var url = window.location
            $('.sidebar-content .nav').find('.active').removeClass('active')
            $('.sidebar-content .nav li a').each(function () {
                if (url.href.includes(this.href)) {
                    $(this).parent().addClass('active')
                }
            })
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>
