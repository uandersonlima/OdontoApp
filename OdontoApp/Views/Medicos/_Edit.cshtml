@model Medico

<h2 class="font-weight-bold text-muted">
    EDITAR
</h2>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MedicoId" />
    <input type="hidden" asp-for="UsuarioId" />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="NomeMedico" class="control-label"></label>
                <input asp-for="NomeMedico" class="form-control" />
                <span asp-validation-for="NomeMedico" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="NumeroCroMedico" class="control-label"></label>
                <input asp-for="NumeroCroMedico" class="form-control" />
                <span asp-validation-for="NumeroCroMedico" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <input type="button" class="btn btn-sm btn-outline-light text-muted font-weight-bold border-0" data-dismiss="modal" value="FECHAR" />
        <input type="submit" value="SALVAR" class="ml-1 btn btn-primary font-weight-bold  btn-sm" />
    </div>
</form>


@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
