@model Paciente
@{
    var plan = Model.Plano;
    TempData["aba"] = 1;
}
<div class="d-flex flex-column d-md-block form-group col-12">
    <span class="span1 h3">
        Data de Nascimento:
    </span>
    <span class="span2 h3 ml-4 my-3">
        <strong>@Model.Nascimento.ToString("dd MMMM yyyy")</strong>
    </span>
    <div class="w-100"></div>
    <br>
    <span class="span1 h3">
        Plano Odontologico:
    </span>
    @if(plan == null)
    {
        <span class="span2 h3 ml-4">
            <strong>Sem plano</strong>
        </span>
    }
    else
    {
        <span class="span2 h3 ml-4">
            <strong>@plan.NumeroPlano</strong>
        </span>
    }
    <div class="w-100"></div>
    <br>
    <span class="span1 h3">
        CPF:
    </span>
    <span class="span2 h3 ml-4">
        <strong>@Model.CPF</strong>
    </span>
</div>
<div class="form-group col-12">
    <span class="span1 h3 mt-md-5 mt-3">Contatos:   </span>
    <div class="col-12 mt-3 ml-md-4">
        <div class="d-flex justify-content-center align-items-center">
            <i class="h1 fas fa-phone-square text-primary"></i>
            <h4 class="col ml-3" style="color: #363636; font-family: 'Roboto', sans-serif;">
                <strong style="margin-left:4px;">(@Model.DDD) @Model.Telefone</strong>
            </h4>
        </div>
        <div class="d-flex justify-content-start align-items-center">
            <i class="h1 prefix fas fa-envelope text-primary"></i>
            <h4 class="col ml-3" style="color: #363636; font-family: 'Roboto', sans-serif;">
                <strong>@Model.EmailPaciente</strong>
            </h4>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <i class="h1 prefix fas fa-map-marked-alt text-primary"></i>
            <h4 class="col " style="color: #363636; font-family: 'Roboto', sans-serif; margin-left:12px;">
                <strong>@Model.Endereco.Rua.Descricao, Nº @Model.Endereco.NumeroEndereco, @Model.Endereco.Bairro.Descricao, @Model.Endereco.Cidade.Descricao - @Model.Endereco.Estado.Descricao</strong>
            </h4>
        </div>
    </div>
</div>