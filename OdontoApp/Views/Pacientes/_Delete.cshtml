@model Paciente
<h2 class="font-weight-bold text-muted text-capitalize">
    Apagar  @Mask.PrimeiroNome(Model.NomePaciente)
</h2>
<div class="text-center p-4">
    <h1 class="fa fa-trash-alt text-danger display-1"></h1>
</div>
<div class="col-12 ml-auto mr-auto text-dark text-justify" role="alert">
    <h2 class="text-muted">Você nunca mais verá informações de  <strong>@Model.NomePaciente</strong>. Deseja apagar este paciente mesmo assim?</h2>
</div>
<form asp-action="Delete" class="mt-5 float-right">
    <input type="hidden" asp-for="PacienteId" />
    <input type="button" class="btn btn-sm btn-outline-light text-primary font-weight-bold border-0 mr-2" data-dismiss="modal" value="DESISTIR" />
    <input type="submit" value="EXCLUIR" class="btn btn-danger btn-sm font-weight-bold" />
</form>

