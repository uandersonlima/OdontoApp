@model Orcamento

<div class="container">
    <div class="text-center p-4">
        <h1 class="fa fa-trash-alt text-danger display-1"></h1>
    </div>
    <div class="rounded col-10 ml-auto mr-auto text-dark" role="alert">
        <h2 class="text-justify text-muted">Deseja realmente remover o orcamento <strong>@Model.DescricaoOrcamento</strong> do dia <strong>@Model.DataOrcamento.ToString("dd-MM-yyyy")</strong> no valor de <strong>@Model.ValorOrcamento.ToString("C")</strong>?</h2>
    </div>

    <form asp-action="Delete" class="mt-5 text-right">
        <input type="hidden" asp-for="OrcamentoId" />
        <input type="hidden" asp-for="PacienteId" name="idpaciente" />
        <input type="button" class="btn btn-sm btn-outline-light text-muted font-weight-bold border-0" data-dismiss="modal" value="FECHAR" />
        <input type="submit" value="EXCLUIR" class="btn btn-danger btn-sm" />
    </form>
</div>

